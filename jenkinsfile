pipeline {
    agent any
    stages {
        /*

        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        */

        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
        /*
        validates node installation and uses npm ci to improve dependencies in a pipeline
        builds the web page app, creating index.html
        before command will not be executed  ---> #ls -la
       


            steps {
                sh '''
                    #test -f build/index.html
                    npm test
                '''
            }
        }
         */

        stage('E2E') {
            // install a Playwright image to run the test
            // https://playwright.dev/docs/docker
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0-jammy'
                    reuseNode true
                }
            }

            steps {
                   /*
                install a server to run the web app
                serves the web app
                runs Playwright tests
                */
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 10
                    npx playwright test
                '''
            }
        }
    }
       // post action that always creates a JUnit report that can be reviewed in Jenkins
    post {
        always {
            junit 'jest-results/junit.xml'
        }
    }
}