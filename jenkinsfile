pipeline {
    agent any

    stages {
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                /*
                Validates node installation and uses npm ci to improve dependencies in a pipeline
                Builds the web page app, creating index.html
                The before command will not be executed  ---> #ls -la
                */
                sh '''
                    #test -f build/index.html
                    npm test
                '''
            }
        }
        
        stage('E2E') {
            // Install a Playwright image to run the tests
            // https://playwright.dev/docs/docker
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0-jammy'
                    reuseNode true
                }
            }
            steps {
                /*
                Installs a server to run the web app
                Serves the web app
                Runs Playwright tests
                */
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 10
                    npx playwright test
                '''
            }
        }
    }
    
    // Post action that always creates a JUnit report that can be reviewed in Jenkins
    post {
        always {
            junit 'jest-results/junit.xml'
        }
    }
}
