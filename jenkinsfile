pipeline {
    agent any
    // creates an image with node 21
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:21-alpine'
                    reuseNode true
                }
            }
            //validates node installation and use npc ci to improve dependencies in a pipeline
            //builds the web page app, creating index.html
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        //install a node image to run the test
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            //validatest that index.html was created and run the test
            steps {
                sh '''
                    test -f build/index.html
                    npm test
                '''
            }
        }
    }
    // post action that always will create a junit report that can be reviewed in jenkins
        post {
            always{
                junit 'test-results/junit.xml'
            }
        }
    }

