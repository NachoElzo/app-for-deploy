pipeline {
    agent any

    stages {
        stage('build') {
            agent {
                docker {
                    image 'node:21-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                node --v
                npm --version
                ls -la
                npm ci
                npm run build
                ls -la
                '''
            }
        }
    }
}
